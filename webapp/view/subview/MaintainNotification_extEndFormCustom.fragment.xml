<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    xmlns:smartField="sap.ui.comp.smartfield"
    xmlns:form="sap.ui.layout.form"
    xmlns:layout="sap.ui.layout"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:eam="sap.i2d.eam.lib.pmnotification.s1.controls"
    xmlns:util="i2d.eam.pmnotification.create.s1.util"
    xmlns:cd="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
>
    <!-- This extension point can be used to add fields to form:content -->
    <!--<CheckBox xmlns="sap.m" 
	id="pmNotifCheckBoxNotifyMe_clone" selected="{Subscribed}" ariaLabelledBy="pmNotifLabelNotifyMe" text="{i18n&gt;xckl.notifyMeOfProgess}" visible="{path: 'UserCanBeNotified', formatter: '.formatter.checkForValidValue'}"/> -->

  <!-- ==== Priority ==== -->
    <Label id="pmNotifLabelPriority" 
           text="{/#NotificationHeader/Priority/@sap:label}" 
           required="true"
		   visible="{path: 'appProperties>/isCreateMode', formatter: '.formatter.checkForValidValue'}" 
           labelFor="pmNotifInputPriority"
           design="Bold" />

					<layout:VerticalLayout
						id="pmNotifVerticalLayoutInputPriority"
						visible="{path: 'appProperties>/isCreateMode', formatter: '.formatter.checkForValidValue'}" 
                        width="20%">

						<layout:content>
                      
                         <Input  id="pmNotifInputpriority"
                                 editable = "{path: 'appProperties>/isCreateMode', formatter: '.formatter.checkForValidValue'}"
                                  value = "{Priority}"
                                  showValueHelp = "true"
                                  valueHelpRequest = "onValueHelpInputPriority" /> 
	

                           <eam:SingleKeyInput id="pmNotifInputPriorityText" 
                                        showValueHelp="true"
                                        objectKey="{PriorityText}"
                                        forceValidObject="false"
                                        change="onInputChange"
                                        visible="true"
                                        enabled="false">
                            </eam:SingleKeyInput>    
                            <Input  id="pmNotifInputPriorityType" visible="false" value="{PriorityType}" />        

						</layout:content>
						
						<layout:layoutData>
							<layout:GridData span="L7 M7 S12" />
						</layout:layoutData>
					</layout:VerticalLayout>

  <!-- ==== Grupo de c贸digos: Codificaci贸n ==== -->
      <Label id="pmNotifLabelZqmgrp2" 
            design="Bold"
           text="Codificaci贸n" 
           required="true"
		   visible="{path: 'appProperties>/isCreateMode', formatter: '.formatter.checkForValidValue'}" 
           labelFor="pmNotifInputZqmgrp2" />

					<layout:VerticalLayout
						id="pmNotifVerticalLayoutInputZqmgrp"
						visible="{path: 'appProperties>/isCreateMode', formatter: '.formatter.checkForValidValue'}">
						<layout:content>
						    <!-- Input field for the Reporter in create/edit -->
							<eam:SingleKeyInput id="pmNotifInputZqmgrp2" 
                                        showValueHelp="true"
                                        objectKey="{Zqmgrp}"
                                        forceValidObject="false"
                                        change="onInputChange"
                                        visible="{path: 'appProperties>/isCreateMode', formatter: '.formatter.checkForValidValue'}"
                                        maxLength="8">
								<eam:valueHelp>
									<eam:EAMValueHelp 
									                entitySet="NotificationPriority"
                                                    title="{i18n>xtit.selectReporter}"
                                                    searchPlaceholder="{i18n>ymsg.searchForReporter}"
                                                    resultTableHeader="{i18n>xtit.reporter}"
                                                    defaultSelectionFields="FullName" 
                                                    persistencyKey="EAMReporterVH"/>
								</eam:valueHelp>
  <!-- ==== Codificaci贸n ==== -->                                
							</eam:SingleKeyInput>

                                <eam:SingleKeyInput id="pmNotifInputZqmcod" 
                                        showValueHelp="true"
                                        objectKey="{Zqmcod}"
                                        forceValidObject="false"
                                        change="onInputChange"
                                        visible="true"
                                        enabled="false"
                                        maxLength="4">
								<eam:valueHelp>
									<eam:EAMValueHelp 
									                entitySet="NotificationPriority"
                                                    title="{i18n>xtit.selectReporter}"
                                                    searchPlaceholder="{i18n>ymsg.searchForReporter}"
                                                    resultTableHeader="{i18n>xtit.reporter}"
                                                    defaultSelectionFields="FullName" 
                                                    persistencyKey="EAMReporterVH"/>
								</eam:valueHelp>
							</eam:SingleKeyInput>
					        
						</layout:content>
						
						<layout:layoutData>
							<layout:GridData span="L7 M7 S12" />
						</layout:layoutData>
					</layout:VerticalLayout>
</core:FragmentDefinition>
