<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    xmlns:smartField="sap.ui.comp.smartfield"
    xmlns:form="sap.ui.layout.form"
    xmlns:layout="sap.ui.layout"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:eam="sap.i2d.eam.lib.pmnotification.s1.controls"
    xmlns:util="i2d.eam.pmnotification.create.s1.util"
    xmlns:cd="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
>
    <!-- This extension point can be used to add fields to form:content -->
    <!--<CheckBox xmlns="sap.m" 
	id="pmNotifCheckBoxNotifyMe_clone" selected="{Subscribed}" ariaLabelledBy="pmNotifLabelNotifyMe" text="{i18n&gt;xckl.notifyMeOfProgess}" visible="{path: 'UserCanBeNotified', formatter: '.formatter.checkForValidValue'}"/> -->

    <layout:VerticalLayout id="pmNotifVerticalLayoutPriority" >
        <Label id="pmNotifLabelPriority" text="{/#NotificationHeader/Priority/@sap:label}" labelFor="pmNotifInputPriority" />
        <layout:content>
            <Input id="pmNotifInputPriority" showSuggestion="true" showValueHelp="true" valueHelpRequest=".onValueHelpRequest" />
        </layout:content>
        <layout:layoutData>
            <layout:GridData span="L7 M7 S12" />
        </layout:layoutData>
    </layout:VerticalLayout>
    	<VBox>
		<Panel headerText="Upper left">
			<FlexBox
				height="100px"
				alignItems="Start"
				justifyContent="Start">
				<Button text="1" type="Emphasized" class="sapUiSmallMarginEnd" />
				<Button text="2" type="Reject" class="sapUiSmallMarginEnd" />
				<Button text="3" type="Accept" />
			</FlexBox>
		</Panel>
        </VBox>
</core:FragmentDefinition>
